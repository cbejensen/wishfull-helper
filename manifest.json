{
  "manifest_version": 2,

  "name": "Wishfull Helper",
  "description": "If you use Wishfull to manage and share your wishlists, this extension will make things even easier!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
  "permissions": [
    "activeTab"
  ]
}